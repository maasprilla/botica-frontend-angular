.FormularioContacto
  margin-top 6em
  margin-bottom 2em
  background-color #f5f5f5
  opacity 0.9
  width 35em
  display inline-block
  border-radius 5px
  padding 1em
  box-shadow 0 1px 6px rgba(0,0,0,0.35)

.ContactTitle
  font-family 'Open Sans'
  // color white

.Form-nameLabel
  float left
  padding-bottom 0.5em
  font-weight 300
  font-family 'Open Sans'
  // color white

.ContactForm-container
  text-align center

.FormContact-text
  resize none

@media screen and (max-width: 570px)
  .FormularioContacto
    width 100%
    margin-left 0.3em
    margin-right 0.3em
