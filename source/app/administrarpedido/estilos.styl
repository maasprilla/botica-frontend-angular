.MajorContainer-elements
  min-height calc(80vh)

.AdminPedidoMajor-container
  padding-top 2em
  padding-bottom 3em

.AdminPedidoTable-title
  text-align center
  margin-top 0
  padding-top 1em

.AdminPedidoTable
  padding 2em 0
  font-family 'Open Sans'
  text-align center
  background-color #fafafa
  &-title
    margin-top 0
    padding-bottom 1em
    color #15283
  &-containerTable
    background-color #fafafa
    padding 0
    padding-top 3em
  &-table
    width 100%
    margin 0 0 50px 0
  &-table th
    background #152836
    color #fafafa
    font-weight bold
    padding 5px
    text-align center
  &-table td
    color #337ab7
    border-bottom 1px solid #ccc
    padding 5px
    text-align center
  &-table tr:last-child td
    border-top 1px solid #ccc
  &-table tbody
    border 1px solid #152836

  @media only screen and (max-width: 760px), (min-width: 768px) and (max-width: 1024px)
    .AdminPedidoTable
      &-table, &-table thead, &-table tbody, &-table th, &-table td, &-table tr
        display block
      &-table thead tr
        position absolute
        top -9999px
        left -9999px
      &-table tr
        border 1px solid #ccc
      &-table td
        border none
        position relative
      &-table td:before
        position relative
        font-weight bold
      &-table td:nth-of-type(1):before
        content "Dirección: "
      &-table td:nth-of-type(2):before
        content "Descripción: "
      &-table td:nth-of-type(3):before
        content "Ciudad: "
      &-table td:nth-of-type(4):before
        content "Zona de Envio: "
      &-table td:nth-of-type(5):before
        content "Ciudad: "
      &-table td:nth-of-type(6):before
        content "Fecha: "
