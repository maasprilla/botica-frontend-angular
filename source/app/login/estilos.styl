.Login
    position absolute
    max-width 20em
    background-color #F8F8F8
    right 10px
    padding 2em
    border-bottom-left-radius 0.5em
    border-bottom-right-radius 0.5em
    border 2px solid lightgray
    border-top none
    display none
    z-index 1

.LoginForm-Input
        display inline-block
        margin-bottom 1em

.LoginForm-botonLogin
        background-color rgb(0, 174, 204)
        color white
        font-family 'Open Sans'
        border none


.LoginForm-botonLogin:hover
        border 1px solid
        border-color rgb(0, 174, 204)

.SectionLogin
        background-color #3D9BFF
        background-repeat no-repeat
        background-position center
        background-size cover
        text-align center
        padding-top 2em
        padding-bottom 5em
        max-height 70em
        font-family 'Open Sans'

.FormLogin
            background-color snow
            display inline-block
            padding 2em
            margin 3em 0em
            border-radius 0.5em
            box-shadow 0.1em 0.1em  #555
            width 30em
            background-image url(../images/fondo.jpg)
            background-repeat no-repeat
            background-position center
            background-size cover
            color white
            font-family 'Open Sans'

.FormLogin-tittle
            color black
            font-family 'Open Sans'


.FormLogin-input
            margin-bottom 1em
