.DrogueriasList-table
  font-family 'Open Sans'
  width 100%

@media screen and (max-width:795px)
  table.DrogueriasList-table, .DrogueriasList-table thead, .DrogueriasList-table tbody, .DrogueriasList-table th, .DrogueriasList-table td, .DrogueriasList-table tr
    display block
  .DrogueriasList-table thead tr
    display none
  .DrogueriasList-table tr
    border 1px solid #ccc
    margin-bottom 2em
    border-radius 0.5em
  .DrogueriasList-table td
    position relative
    padding-left 50%
    text-align left
    min-height 2.5em
  .DrogueriasList-table td:before
    position absolute
    top 6px
    left 6px
    width 45%
    padding-right 10px
    white-space nowrap

