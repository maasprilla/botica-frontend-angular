.HeaderDrogView
  background-color #166ba2
  height 28em
  padding-top 3.6em
  &-logo
    text-align center
    padding-top 1em
  &-logoImg
    width 100%
    border solid 4px #f9f9f9
    border-radius 50%
    height 15em
    width 15em
  &-icons
    padding 1em 1.5em 1em 0



.FormPerfilDrog
    background-color snow
    font-family 'Open Sans'
    display flex
    justify-content space-between
    padding 2em
    margin auto
    box-shadow 0.1em 0.1em  #555
    border-radius 0.5em
    max-width 55em
    margin-top 3em
    margin-bottom 3em
    &-input
      margin-bottom 1em
      font-family 'Open Sans'
      border-radius 1em
      display inline-block
      width 80%
    &-edit
      display inline-block
      font-family 'Open Sans'
      width 10%
      // color #3D9BFF
      color #166ba2
      cursor pointer
      padding-left 1.5em
    &-tittle
      color black
      font-family 'Open Sans'
      border 1px solid #999
      margin 0 0 1.5em 0
      padding .5em 0
      box-shadow 3px 2px 4px -3px #999
      text-align center
    &-img
      width 9em
      height 9em
      border 1px solid #999
      box-shadow 3px 3px 4px -3px #999
    &-info
      width 80%
      display inline-block
    &-label
      box-sizing border-box
      padding 2em
      border 1px solid #999
      box-shadow 3px 3px 4px -3px #999

.FormPerfilDrog-input>label
  color #3D9BFF

.dropzone
  position relative
  color #000
  text-align center


.dropzone:hover
  color #FE5
  background-color rgba(0, 0, 0, 0.3)


.dropzone:dropped
  background #222
  border 10px solid #444


.dropzone div
  position: absolute
  top: 3em
  right: 0
  bottom: 0
  left: 0
  color: white


.dropzone img
  border-radius 10px
  vertical-align middle
  max-width 95%
  max-height 95%


.dropzone [type="file"]
  cursor pointer
  position absolute
  opacity 0
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  height 100%
  padding 0
  font bold 1px arial


@media (max-width: 463px)
  .FormPerfilDrog-edit
    padding-left 0.5em
    font-size 11px
  .FormPerfilDrog-label
    padding-left 0.2em

@media (max-width: 422px)
  .FormRegistro
    width 100%

@media (max-width: 800px)
  .FormPerfilDrog
    flex-direction column
    align-items center
    width 80%
    &-img
      margin-bottom 2em
    &-info
      width 100%
@media (max-width: 400px)
  .FormPerfilDrog
    padding 1em
@media screen and (max-width: 1000px)
  .HeaderDrogView
    &-icons
      max-width 55px
      margin-right 0.5em
      display inline-block
    &-containerIcon
      text-align center
