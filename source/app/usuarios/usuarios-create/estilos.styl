.SectionRegistro
    text-align center
    font-family 'Open Sans'
    padding  8em 0
    background-color #3D9BFF
.FormRegistro
    background-color snow
    display inline-block
    padding 2em
    border-radius 0.5em
    box-shadow 0.1em 0.1em  #555
    width 30em
    background-repeat no-repeat
    background-position center
    background-size cover
    color Snow
    text-align center
    &-input
      color black
    &-tittle
      color black

.FormRegistro-input
  max-height 4.8em
  bottom 1.4em

.UserCreate-container>label
  color #4385f6

@media (max-width: 422px)
  .FormRegistro
    width 100%

@media screen and (max-width: 450px)
  .UserCreate-container
    font-size 11px
  .FormRegistro-tittle
    font-size 22px
