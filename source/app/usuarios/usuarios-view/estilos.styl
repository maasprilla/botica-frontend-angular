.SectionPerfil
    text-align center
    font-family 'Open Sans'
    padding  8em 0
    background-color #3D9BFF
.FormPerfil
    background-color snow
    font-family 'Open Sans'
    display flex
    justify-content space-between
    padding 2em
    margin auto
    border-radius 0.5em
    box-shadow 0.1em 0.1em  #555
    max-width 55em
    &-input
      margin-bottom 1em
      font-family 'Open Sans'
      border-radius 1em
      diplay inline-block
      width 80%
    &-edit
      display inline-block
      font-family 'Open Sans'
      width 10%
      color #3D9BFF
      cursor pointer
      padding-left 1.5em
    &-tittle
      color black
      font-family 'Open Sans'
      border 1px solid #999
      margin 0 0 1.5em 0
      padding .5em 0
      box-shadow 3px 2px 4px -3px #999
    &-img
      width 9em
      height 9em
      border 1px solid #999
      box-shadow 3px 3px 4px -3px #999
    &-info
      width 80%
      display inline-block
    &-label
      box-sizing border-box
      padding 2em
      border 1px solid #999
      box-shadow 3px 3px 4px -3px #999

@media (max-width: 422px)
  .FormRegistro
    width 100%

@media (max-width: 800px)
  .FormPerfil
    flex-direction column
    align-items center
    width 80%
    &-img
      margin-bottom 2em
    &-info
      width 100%
@media (max-width: 400px)
  .FormPerfil
    padding 1em
    &-label
      padding 1em
