.Footer
  background black
  min-height 13.75em
  height auto
  padding-top 2em
  display: flex;
  justify-content: space-around;
  @media screen and (max-width: 700px)
    flex-direction: column-reverse;
    align-items: center;
  &-Ambiental
    background-color #007E33
    min-height 13.75em
    height auto
    text-align center
    padding-top 2em
  &-Seccion
    display inline-block
    text-align: center;
    vertical-align top
    padding 0.5em
    max-width 15em
    min-height 12em
    color snow
    @media screen and (max-width: 700px)
      max-width: 100%
      min-height: 8em;
  &-Seccion>p
    font-size 1em
  &-tittle>a
    color snow
    text-decoration none

.icon
  width: 100%
  display: flex;
  justify-content: space-around;

.Icons-container
  width: 21em;
.icon-follow:hover
  cursor: pointer;
  color: #3d9bff
  border-radius: 50%


.Footer-Seccion-Contanier
  text-align: left
  margin: auto;

