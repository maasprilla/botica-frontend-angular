.HeaderRealizarPedido
  background-color #166ba2
  height 28em
  padding-top 3.6em
  &-logo
    text-align center
    padding-top 1em
  &-logoImg
    width 100%
    border solid 4px #f9f9f9
    border-radius 50%
    padding 0.5em
  &-icons
    padding 1em 1.5em 1em 0

.RealizarPedidoMajor-container
  background-color #fafafa
  background-repeat no-repeat
  background-position center
  background-size cover
  font-family 'Open Sans'
  text-align center
  // padding 0em 5em
  padding-top 3em
  padding-bottom 5em

.FormRealizarPedido
  background-color snow
  padding 2em
  width 30em
  font-family 'Open Sans'
  text-align center
  display inline-block
  border-radius 0.5em
  box-shadow 0.1em 0.1em  #555

.FormRealizarPedido-tittle
  text-align center
  padding-bottom 1em

.FormRealizarPedido-input, .FormRealizarPedido-textarea
  border-style none
  border-radius 0.4em
  margin-bottom 0.8em
  resize none
  padding 0.5em
  font-family 'Open Sans'

.FormRealizarPedido-textarea
  height 12em

.FormRealizarPedido-add
  width 100%

.FormRealizarPedido-button
  background-color rgb(0, 174, 204)
  border-style none
  margin-top 1em
  padding 1em 2em
  border-radius 0.5em
  color white
  font-family 'Open Sans'

.AgregarProd
  text-align center
  font-family 'Open Sans'
  &-input
    display inline-block
    font-family 'Open Sans'

.RealizarPedido-input>label
  color #4385f6

