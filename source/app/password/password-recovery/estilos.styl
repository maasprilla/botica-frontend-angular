.passrecovery
  background-color #166ba2
  height 28em
  padding-top 3.6em
  &-logo
    text-align center
    padding-top 1em
  &-logoImg
    width 100%
    border solid 4px #f9f9f9
    border-radius 50%
    height 15em
    width 15em
  &-icons
    // padding 1em 1.5em 1em 0
    display inline-block

.passrecoveryForm
  text-align center
  padding-top 5em
  padding-bottom 5em
  background-image url('../../../images/fondo2.jpg')
  box-shadow: inset 0px 0px 12px 1px rgba(0,0,0,0.5);
  &-form
    max-width 35em
    display inline-block
    padding 3em
    border: 1px solid #ccc
    border-radius: 0.5em
  &-title
    margin-bottom: 1em

/**.passrecovery-containerIcon
  display inline-block **/

@media (max-width: 522px)
  .passrecoveryForm-form
    width 100%

@media screen and (max-width: 1001px)
  .passrecovery
    &-content
      text-align center
    &-icons
      max-width 55px
      margin-right 0.5em
      display inline-block
    &-containerIcon
      text-align center
      display inline-block
