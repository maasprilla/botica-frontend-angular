body
  min-height 100vh
.Header
  height 48em
  text-align center
  background-color #3D9BFF
  background-image url('/images/header.jpg')
  background-size cover
  background-position center
  background-repeat no-repeat
  &-content    
    height 40em
.MainMenu
  background-color #4385F6
  border-radius 0px
  font-family 'Open Sans'
  margin-bottom 0
  &-Ambiental
    background-color #24CC0D
    font-family 'Open Sans'
    border-color #24CC0D
  &-link
    color white
  &-linkLogo
    padding 0
  &-logo
    width 5em
    height 100%
    margin 0
    margin-left 1em
  &-logo>img
    width 100%
    height 100%

.MainMenuSecundary
  width 80%
  font-family 'Open Sans'
  display inline-block
  z-index 3
  &-group>li>a
    color black
.PanelLogin
  position absolute
  display inline-block
  background snow
  right 0em
  padding 1.5em
  display none
  border 1px solid lightgray
  border-top none
  text-align center
  z-index 3
  &-form
    width 20em
  &-input
    text-align center
.headeronlynav
  &-navbar
    margin-bottom 0

.Options
  position absolute
  display inline-block
  text-align center
  background snow
  right 0em
  display none
  border 6px solid #e7e7e7

.OptSelect, .OptSelect2
  width 15em
  padding 1em


#MainMenu-list>li>a:hover
  background snow
  color #3D9BFF

#MainMenu-list>li>a:focus
  background snow
  color #3D9BFF

@media (max-width: 695px)
  .Header
    height 28em
    background-image url('/images/header.jpg')
    background-size 100% 100%
    background-repeat no-repeat
    &-content    
      height 20em
