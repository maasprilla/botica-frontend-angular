/** Estilos animaciones header **/
@media (min-width: 975px)
  .Header
    &-container
      width 37em
      height 2.5em
      display flex
      color #152836
      font-size 25px
      line-height 25px
      position absolute
      top 8em
      right 0
      bottom 0
      left 0
      margin auto
      overflow hidden
    &-container>ul
      list-style none
      padding-left 10px
      margin 0
      text-align center
      // -webkit-animation-play-state 7s paused
    &-container>p
      margin 0
      font-family 'Open Sans'
    &-paragraph1
      animation changetext1 25.2s ease-in-out infinite
      text-transform capitalize
    &-paragraph2
      animation changetext2 25.2s ease-in-out infinite
      text-transform capitalize
    &-paragraph3
      animation changetext3 25.2s ease-in-out infinite
      text-transform capitalize
    @-webkit-keyframes changetext1
      0% {opacity: 0; animation-timing-function: ease-in-out; -webkit-transform: translateY(100%)}
      9% {opacity: 1; animation-timing-function: ease-in-out; -webkit-transform: translateY(0%)}
      23% {opacity: 1;}
      24% {opacity: 0;}
      85% {opacity: 0; animation-timing-function: ease-in-out; -webkit-transform: translateY(0%)}
      100% {opacity: 0; animation-timing-function: ease-in-out; -webkit-transform: translateY(0%)}
    @-webkit-keyframes changetext2
      25% {opacity: 0; animation-timing-function: ease-in-out; -webkit-transform: translateY(0%)}
      34% {opacity: 1; animation-timing-function: ease-in-out; -webkit-transform: translateY(-2em)}
      53% {opacity: 1; animation-timing-function: ease-in-out; -webkit-transform: translateY(-2em)}
      54% {opacity: 0;}
      85% {opacity: 0;}
      100% {opacity: 0;}
    @-webkit-keyframes changetext3
      0% {opacity: 0; animation-timing-function: ease-in-out; -webkit-transform: translateY(0%)}
      20% {opacity: 1; animation-timing-function: ease-in-out; -webkit-transform: translateY(0%)}
      22% {opacity: 0;}
      25% {opacity: 0; animation-timing-function: ease-in-out; -webkit-transform: translateY(0%)}
      50% {opacity: 1; animation-timing-function: ease-in-out; -webkit-transform: translateY(-2em)}
      55% {opacity: 1; animation-timing-function: ease-in-out; -webkit-transform: translateY(-2em)}
      64% {opacity: 1; animation-timing-function: ease-in-out; -webkit-transform: translateY(-4.5em)}
      84% {opacity: 1; animation-timing-function: ease-in-out; -webkit-transform: translateY(-4.5em)}
      85% {opacity: 0;}
      100% {opacity: 0;}


