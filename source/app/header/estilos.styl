.MainMenu
  position fixed
  right 0
  left 0
  z-index 99
  background-color #152836
  border-radius 0px
  border none
  font-family 'Open Sans'
  text-align center
  margin-bottom 0
  &-list
    display inline-block
  &-link
    color white
  &-linkLogo
    padding 0
    position absolute
    width 100%
    left 0
    top 0
  &-logo
    width 5em
    height 100%
    margin 0
    margin-left 2em
    display inline-block
  &-logo>img
    width 100%
    height 100%

.PanelLogin
  position absolute
  display inline-block
  background snow
  right 0em
  padding 1.5em
  display none
  border 1px solid lightgray
  border-top none
  text-align center
  z-index 3
  &-form
    width 20em
  &-input
    text-align center

.Options
  position absolute
  display inline-block
  text-align center
  background snow
  right 0em
  display none
  border-right 2px solid #152836
  border-bottom 2px solid #152836
  border-left 2px solid #152836
  border-bottom-right-radius 10px
  border-bottom-left-radius 10px

.OptSelect, .OptSelect2
  width 15em
  padding 1em

.MainMenu-scrolled
    transition all 0.6s ease-out
    background-color: #152836;
    opacity: 0.9;
    transition: background .5s ease-in-out, opacity .5s ease;


