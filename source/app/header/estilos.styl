.Header
  height 48em
  text-align center
  background-color #3D9BFF
  background-image url('/images/header.jpg')
  background-size cover
  background-position center
  background-repeat no-repeat
  &-content
    height 40em
.MainMenu
  background-color #4385F6
  border-radius 0px
  &-Ambiental
    background-color #24CC0D
    border-color #24CC0D
  &-link
    color white
  &-linkLogo
    padding 0
  &-logo
    width 5em
    height 100%
    margin 0
    margin-left 1em
  &-logo>img
    width 100%
    height 100%

div.MainMenu-container ul.MainMenu-list li.MainMenu-item:hover
  background-color

.MainMenuSecundary
  width 80%
  display inline-block
  &-group>li>a
    color black
.PanelLogin
  position absolute
  display inline-block
  background snow
  right 0em
  padding 1.5em
  display none
  &-form
    width 20em
  &-input
    text-align center
.headeronlynav
  &-navbar
    margin-bottom 0

.Options
  position absolute
  display inline-block
  text-align center
  background snow
  right 0em
  display none
  border 6px solid #e7e7e7

.OptSelect, .OptSelect2
  width 15em
  padding 1em
